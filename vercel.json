{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(auth|login|signup|logout|user|upload-profile-picture|admin).*",
      "dest": "/api/index.js"
    },
    {
      "src": "/(assets|css|public)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*\\.(html|js|css|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/public/index.html"
    }
  ]
}
